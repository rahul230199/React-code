const express = require("express");
const router = express.Router();

const rfqController = require("../src/controllers/rfq.controller");

/**
 * SUPPLIER DASHBOARD (explicit path)
 */
router.get("/supplier/list", rfqController.getRFQsForSupplier);

/**
 * CREATE RFQ
 */
router.post("/", rfqController.createRFQ);

/**
 * GET RFQs BY BUYER
 */
router.get("/", rfqController.getRFQsByBuyer);

/**
 * GET RFQ BY ID (MUST BE LAST)
 */
router.get("/:id(\\d+)", rfqController.getRFQById);

module.exports = router;

